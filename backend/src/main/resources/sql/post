DROP TABLE IF EXISTS post;

CREATE TABLE post
(
    id           serial  not null primary key,
    message      varchar not null,
    posting_date timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
    likes        int default 0,
    dislikes     int default 0,
    image        varchar,
    username     varchar

);

